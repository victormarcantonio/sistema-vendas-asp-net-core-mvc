
@{
	ViewData["Title"] = "Registro de Vendas";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
	<div class="col-md-6">
		<form class="form-horizontal" asp-action="BuscaSimples">
			<fieldset>
				<legend>Busca Simples</legend>
				<div class="form-group">
					<label for="dataMin" class="col-lg-2 control-label">Data Mínima</label>
					<div class="col-lg-10">
						<input type="date" name="dataMin" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label for="dataMax" class="col-lg-2 control-label">Data Máxima</label>
					<div class="col-lg-10">
						<input type="date" name="dataMax" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
						<button type="submit" class="btn btn-primary">Enviar</button>
					</div>
				</div>
			</fieldset>
		</form>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<form class="form-horizontal" asp-action="BuscaAgrupada">
			<fieldset>
				<legend>Busca Agrupada</legend>
				<div class="form-group">
					<label for="dataMin" class="col-lg-2 control-label">Data Mínima</label>
					<div class="col-lg-10">
						<input type="date" name="dataMin" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label for="dataMax" class="col-lg-2 control-label">Data Máxima</label>
					<div class="col-lg-10">
						<input type="date" name="dataMax" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
						<button type="submit" class="btn btn-primary">Enviar</button>
					</div>
				</div>
			</fieldset>
		</form>
	</div>
</div>

